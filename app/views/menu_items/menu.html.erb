<section class="user_new">
  <%= form_with url: "/menu_items/editMenu", method: "get", class: "get_menu" do |form| %>
    <div class="form-section">
      <p class="form_input_label">Menu Category</p>
      <%= select_tag :menu_category_id, options_for_select(@menu_list.collect { |u| u }, selected: params[:menu_category_id]), include_blank: true, onchange: "this.form.submit()" %>
    </div>
    <% if params[:menu_category_id] %>
    <div class="form_section">
    <p class="form_input_label">Menu Item Name</p>
    <%= select_tag(:id, options_for_select(@menu_items.collect { |u| u }, selected: params[:id]), include_blank: true, onchange: "this.form.submit()") %>
    </div>
   <div>
   <% end %>
  </div>
  <% end %>
  <%= form_with url: "/menu_items/editMenu", method: "get", class: "get_menu" do |form| %>
  <% end %>
  <% if params[:id] %>
  <%= form_with url: "/menu_items/#{params[:id]}", method: "put" do |form| %>
    <div class="form_section">
      <p class="form_input_label">Menu Item Name:</p>
      <%= form.text_field :name, class: "form_input", value: "#{@item_values[0][0]}" %>
    </div>
    <div class="form_section">
      <p class="form_input_label">Description:</p>
      <%= form.text_area :description, class: "form_input", value: "#{@item_values[0][1]}" %>
    </div>
    <div class="form_section">
      <p class="form_input_label">Price:</p>
      <%= form.text_field :price, class: "form_input", value: "#{@item_values[0][2].to_i / 100}" %>
    </div>
    <div class="form_section">
      <%= form.submit "Save", class: "form_submit" %>
    </div>
  <% end %>
  <% end %>






</section>