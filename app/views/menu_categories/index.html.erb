<section class="content_center">
<ul class="menu">
<% @category.each do |category| %>
    <li class="menu_category">
      <div>
        <p class="menu_category_name"><%= category.name %></p>
        <% category.menu_items.get_items(category.id).each do |item| %>
        <li class="menu_item">
          <div class="menu_item_container">
          <div ><h4 class = "menu_item_name"><%= item.name %></h4></div>
          <div><span class="menu_item_price">â‚¹<%= item.price.to_i / 100 %></span></div>
          </div>
          <div class="menu_item_quantity">
            <%= form_with(url: "/cart_items/#{item.id}", method: "put") do %>
              <%= submit_tag("-", class: "decrement-button") %>
            <% end %>
            <p class="menu_item_quantity"><%= item[5] %></p>
            <%= form_with(url: "/cart_items/#{item.id}/increment", method: "put") do %>
              <%= submit_tag("+", class: "increment-button") %>
            <% end %>
          </div>
        <li>
          <% end %>
      </div>
    </li>
    <% end %>
  </ul>
</section>
<section class="content_left">
<ul>
    <li>
        <h1>Hello</h1>
    </li>
</ul>
</section>
<section class="content_right">
<ul class="menu">
<h3>Cart Items</h3>
<% if @cart %>
<% @cart_items.all.each do |item| %>
    <li class="menu_item">
    <div class="menu_item_container">
        <div><h4 class="menu_item_name"><%= item.menu_item_name %></h4></div>
    </div>
    </li>
    <% end %>
</ul>
<% else %>
<h1> Your Cart is Empty !! <h1>
<% end %>

</section>